{
  "name": "Aurora App - Safety & Community for Women",
  "short_name": "Aurora App",
  "description": "The future of social networking. Non-toxic AI, privacy-first, built by women for women. Safety intelligence, safe routes, support circles, and career opportunities.",
  "start_url": "/feed",
  "id": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#fffaf1",
  "theme_color": "#3d0d73",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "prefer_related_applications": false,
  "orientation": "portrait-primary",
