      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "categories": ["social", "lifestyle", "navigation", "health", "productivity"],
  "iarc_rating_id": "",
  "screenshots": [
    {
      "src": "/screenshot-feed.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Aurora App Feed - Your personalized safety-first social feed"
    },
    {
      "src": "/screenshot-map.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Safety Map - Community-powered location intelligence"
    },
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Aurora App Desktop - Full-featured web experience"
    }
  ],
  "shortcuts": [
    {
      "name": "Safety Map",
      "short_name": "Map",
      "description": "View safety ratings and reports near you",
      "url": "/map",
      "icons": [{ "src": "/icon-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Track Route",
      "short_name": "Track",
      "description": "Start tracking a safe route",
      "url": "/routes/track",
      "icons": [{ "src": "/icon-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Aurora AI",
      "short_name": "AI",
      "description": "Chat with your AI companion",
      "url": "/assistant",
      "icons": [{ "src": "/icon-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Emergency",
      "short_name": "SOS",
      "description": "Quick access to emergency features",
      "url": "/emergency",
      "icons": [{ "src": "/icon-96.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+aurora",
      "url": "/handle?url=%s"
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "related_applications": [],
  "features": [
    "Cross-Origin Isolated",
    "Notifications",
    "Background Sync",
    "Periodic Background Sync"
  ]
}
